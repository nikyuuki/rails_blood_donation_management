<div class="custom-container">
 <%= link_to render 'home/header'%> 
    <% content_for :title, "Staff" %>

    <h1 class= "pb-3">Staff List</h1>
     <%= link_to  "New Staff", new_staff_path, class: "btn btn-danger btn-block px-3 py-2 w-100" %>

      <%= form_with url: staffs_path, method: :get, local: true, class: "search-form" do %>
        <div class="input-group mb-3 pt-3" style="width: 300px; float: left;">
          <%= text_field_tag :search, params[:search], placeholder: "Search staffs...", class: "form-control" %>
        </div>
      <% end %>
        <% if @staffs.present? %>
<% content_for :title, "Staffs" %>

 <div id="staffs">
    <table class="table">
      <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Role</th>
            <th scope="col">Actions</th>
          </tr>
      </thead>

      <% @staffs.each do |staff| %>
          <tbody>
              <%= render staff %> 
                <td>
                 <%= link_to "show", staff, class: "border border-success text-black rounded px-3 py-1 w-auto" %>
               </td>
        <% end %>
        <% else %>
          <tr>
            <td colspan="6" class="text-center">No Staffs found</td>
          </tr>
        <% end %>
        </tbody>
    </table>
  </div>
</div>
