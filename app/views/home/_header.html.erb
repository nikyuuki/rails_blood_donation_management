<header style="background-color: #DCDCDC;">
  <nav id="sidebarMenu" class="collapse d-lg-block sidebar bg-light collapse mr-auto mt-3">
    <div class="position-sticky">
      <div class="list-group list-group-flush mx-3 mt-4" >

         <%= link_to home_dashboard_path, class: "list-group-item list-group-item-action py-2 ripple bg-light" do %>
          <span>Dashboard</span>
        <% end %>

        <%= link_to donors_path, class: "list-group-item list-group-item-action py-2 ripple bg-light" do %>
          <span>Donor List</span>
        <% end %>

        <%= link_to appointments_path, class: "list-group-item list-group-item-action py-2 ripple bg-light" do %>
          <span>Appointments List</span>
        <% end %>

        <%= link_to bagbloods_path, class: "list-group-item list-group-item-action py-2 ripple bg-light" do %>
          <span>Bloodbags List</span>
        <% end %>

        <%= link_to staffs_path, class: "list-group-item list-group-item-action py-2 ripple bg-light" do %>
          <span>  Staff List</span>
        <% end %>

        <%= link_to edit_admin_registration_path, class: "list-group-item list-group-item-action py-2 ripple bg-light" do %>
          <span>Edit Profile</span>
        <% end %>
      </div>
    </div>
  </nav>
  <!-- Sidebar -->

  <!-- Navbar -->
  <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-white border-bottom border-danger fixed-top">
    <div class="container-fluid">
      <!-- Toggle button -->
      <button data-mdb-button-init class="navbar-toggler" type="button" data-mdb-collapse-init data-mdb-target="#sidebarMenu"
              aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <i class="fas fa-bars"></i>
      </button>

      <!-- Brand -->
      <%= link_to home_dashboard_path, class: "navbar-brand" do %>
        <h1>Love Blood</h1>
      <% end %>

      <!-- Right links -->
      <ul class="navbar-nav ms-auto d-flex flex-row">
           <%= link_to destroy_admin_session_path, method: :delete, class: "btn btn-outline-warning m-2" do %>          
           <i class="fas fa-lock fa-fw me-1"></i>
          <span>Log Out</span>
        <% end %>
      </ul>

    </div>
    <!-- Container wrapper -->
  </nav>
  <!-- Navbar -->
</header>
